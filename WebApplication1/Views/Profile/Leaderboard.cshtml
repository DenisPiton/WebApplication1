@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using WebApplication1.Data.Entites;
@model IEnumerable<Result>
<partial name="~/Views/Shared/_Header.cshtml" />

<h1 class="mt-10 text-3xl place-self-center text-center">Таблица 100 лучших результатов</h1>
<div class="sm:w-1/2 w-[400px] sm:min-w-[700px] sm:min-h-96 place-self-center mt-8 bg-gray-800 rounded-3xl">
    <div class="sm:h-20 h-10 w-full grid grid-cols-2 bg-gray-700 rounded-t-3xl text-center place-content-center">
        <p class="text-[15px] sm:text-2xl font-normal text-gray-400">Имя пользователя</p>
        <p class="text-[15px] sm:text-2xl font-normal text-gray-400">Результат</p>
    </div>

    @if (Model == null || !Model.Any())
    {
        <h1 class="text-4xl text-center py-4">Нет данных для отображения</h1>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="grid odd:bg-gray-800 even:bg-[#243042] grid-cols-2 w-full text-center place-content-center h-[40px]">
                <p class="text-[15px] sm:text-2xl font-medium">
                    @(item.user?.userame ?? "Неизвестный пользователь")
                </p>
                <p class="text-[15px] sm:text-2xl font-semibold">
                    @item.time секунд
                </p>
            </div>
        }
    }
</div>

